<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-fream">
          <div class="form-area">
            <h1 class="form-area-title mb-4">
            言葉の壁をなくそう
            </h1>
            <div class="input-area mb-4">
              <%= form_with url: root_path do |form| %>
                <input type="text" class="text_form">
                <input type="submit" class="submit_form">
              <% end %>
            </div>
            <div class="signin-area">
              <% if user_signed_in? %>
              <p>
              こんにちは、
              <%= link_to users_profile_path, class: "form-users-profile-link" do %>
                <%= current_user.name %>
              <% end %>
              さん
            </p>
              <% else %>
                <p>
                  <%= link_to "会員登録", new_user_registration_path %>
                  して翻訳を依頼する / 翻訳する
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="panel-area m-5">
      <div class="row">
        <div class="panel-item col-lg-6">
          <span>投稿する</span>
          <%= link_to image_tag("/assets/question.jpg", class: "panel-image"), new_post_path %>
          <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-6">
          <span>翻訳する</span>
          <%= link_to image_tag("/assets/answer.jpg", class: "panel-image"), "/" %>
          <div class="shadow"></div>
        </div>
      </div>
    </div>
  </div>
</div>
