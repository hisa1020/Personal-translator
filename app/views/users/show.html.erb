<header class="header">
  <div class="header-inner">
    <div class="header-left-nav">
      <%= link_to image_tag("/assets/Personal-logo.png", height: "70px", alt: "サイトのロゴ画像"), "/" %>
    </div>
    <div class="header-right-nav">
      <div class="nav-item">
        <% if user_signed_in? %>
          <%= link_to(root_path, class: "my-2 mx-3") do %>
            <i class="fa-solid fa-gear"></i>
          <% end %>
          <%= link_to(destroy_user_session_path, class: "my-2 mx-3") do %>
            <i class="fa-solid fa-right-from-bracket"></i>
          <% end %>
        <% else %>
          <%= link_to(new_user_session_path, class: "my-2 mx-3") do %>
            <i class="fa-solid fa-right-to-bracket"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</header>
<div class="container-fruid user">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li class="<%= 'active' if current_page?(users_mypage_path) %>">
          <%= link_to "アカウント情報", users_mypage_path %>
        </li>
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to "アカウント編集", root_path %>
        </li>
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to "投稿一覧", root_path %>
        </li>
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to "コメント一覧", root_path %>
        </li>
      </ul>
    </div>
    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li class="<%= 'active' if current_page?(users_mypage_path) %>">
          <%= link_to "アカウント情報", users_mypage_path %>
        </li>
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to "アカウント編集", root_path %>
        </li>
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to "投稿一覧", root_path %>
        </li>
        <li class="<%= 'active' if current_page?(root_path) %>">
          <%= link_to "コメント一覧", root_path %>
        </li>
      </ul>
    </div>
    <div class="col-md-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>アカウント</h5>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3" for="email">
            メールアドレス
            </label>
            <div class="col-md-9">
              <%= @user.email %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3" for="password">
            パスワード
            </label>
            <div class="col-md-9">
              *********
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= link_to "編集", edit_user_registration_path, class: "col-md-2 btn btn-primary my-2 mx-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
