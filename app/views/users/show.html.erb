<header class="header">
  <div class="header-inner">
    <div class="header-left-nav">
      <%= link_to image_tag("/assets/Personal-logo.png", height: "70px", alt: "サイトのロゴ画像"), "/" %>
    </div>
    <div class="header-right-nav">
      <div class="nav-item">
        <% if user_signed_in? %>
          <%= link_to(root_path, class: "my-2 mx-3") do %>
            <i class="fa-solid fa-gear"></i>
          <% end %>
          <%= link_to(destroy_user_session_path, class: "my-2 mx-3") do %>
            <i class="fa-solid fa-right-from-bracket"></i>
          <% end %>
        <% else %>
          <%= link_to(new_user_session_path, class: "my-2 mx-3") do %>
            <i class="fa-solid fa-right-to-bracket"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</header>
<div class="container-fruid user">
  <div class="row">
    <%= render"shared/user_navbar" %>
    <div class="col-md-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>プロフィール情報</h5>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3" for="email">
            ユーザー名
            </label>
            <div class="col-md-9">
              <%= @user.name %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3" for="email">
            自己紹介文
            </label>
            <div class="col-md-9">
              <%= @user.introduction %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <label class="col-md-3" for="email">
          アイコン画像
          </label>
          <div class="row">
            <div class="col-md-6 offset-md-3">
              <div class="icon-box">
                <%= image_tag @user.user_icon.url, class: "icon-image host-icon", alt: "アイコン画像"  %>
              </div>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3" for="email">
            メールアドレス
            </label>
            <div class="col-md-9">
              <%= @user.email %>
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3" for="password">
            パスワード
            </label>
            <div class="col-md-9">
              *********
            </div>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= link_to "プロフィールを編集", users_edit_path, class: "col-md-4 btn btn-primary my-2 mx-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
