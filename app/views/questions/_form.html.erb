<%= form_with model: question do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="update-content">
    <div class="row">
      <label for="q_title" class="col-md-3 required-a">
      タイトル
      </label>
      <%= f.text_field :q_title, id: "q_title", class: "form-control mb-4 col-md-9", placeholder: "タイトルを入力" %>
    </div>
  </div>
  <div class="update-content">
    <div class="row">
      <label for="q_content" class="col-md-3 required-a">
      本文
      </label>
      <%= f.text_area :q_content, id: "q_content", class: "form-control mb-4 col-md-9", placeholder: "質問したい内容を記載してください。" , rows: 25 %>
    </div>
  </div>
  <div class="update-content">
    <div class="row">
      <%= f.submit "質問する", class: "col-md-4 btn btn-primary mx-3" %>
    </div>
  </div>
<% end %>
